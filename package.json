{
  "name": "docs-linter",
  "version": "1.0.4",
  "description": "Shared textlint configuration for Markdown files across WordPress and Xcode projects.",
  "type": "module",
  "author": "Koutarou ISHIKAWA",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "textlint",
    "textlint-rule",
    "markdown",
    "wordpress",
    "xcode",
    "swift"
  ],
  "main": "dist/run-textlint.js",
  "bin": {
    "docs-lint": "dist/bin/run-textlint.js"
  },
  "scripts": {
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && vite build",
    "dev": "vite build --watch",
    "lint": "npx textlint '**/*.md'",
    "lint:wp": "npx textlint --config ./wordpress/.textlintrc.wp.json '**/*.md'",
    "lint:swift": "npx textlint --config ./swift/.textlintrc.swift.json '**/*.md'",
    "prepare": "npm run build && node ./dist/scripts/setup-npmignore.js",
    "postinstall": "node ./dist/scripts/setup-npmignore.js || true"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "overrides": {
    "rollup": "^4.53.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "rollup": "^4.53.2",
    "textlint": "^15.3.0",
    "textlint-rule-no-dead-link": "^6.0.1",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-preset-jtf-style": "^3.0.3",
    "textlint-rule-preset-swift-docs-ja": "github:stein2nd/textlint-rule-preset-swift-docs-ja",
    "textlint-rule-preset-wp-docs-ja": "github:jawordpressorg/textlint-rule-preset-wp-docs-ja",
    "textlint-rule-prh": "^6.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  }
}
