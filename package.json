{
  "name": "docs-linter",
  "version": "0.1.0",
  "description": "Shared textlint configuration for Markdown files across WordPress and Xcode projects.",
  "type": "module",
  "author": "Koutarou ISHIKAWA",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "textlint",
    "textlint-rule",
    "markdown",
    "wordpress",
    "xcode",
    "swift"
  ],
  "scripts": {
    "lint": "textlint '**/*.md'",
    "lint:wp": "textlint --config ./wordpress/.textlintrc.wp.json '**/*.md'",
    "lint:xcode": "textlint --config ./xcode/.textlintrc.xc.json '**/*.md'"
  },
  "overrides": {},
  "devDependencies": {
    "@textlint-ja/textlint-rule-no-synonyms": "^1.3.0",
    "@textlint/kernel": "^15.2.3",
    "@textlint/textlint-plugin-markdown": "^15.2.3",
    "jest": "^30.2.0",
    "textlint": "^15.2.3",
    "textlint-rule-ja-hiragana-keishikimeishi": "^1.1.0",
    "textlint-rule-ja-no-abusage": "^3.0.0",
    "textlint-rule-ja-no-redundant-expression": "^4.0.1",
    "textlint-rule-ja-space-around-code": "^2.4.2",
    "textlint-rule-max-kanji-continuous-len": "^1.1.1",
    "textlint-rule-no-dead-link": "^6.0.1",
    "textlint-rule-no-dropping-the-ra": "^3.0.0",
    "textlint-rule-no-mixed-zenkaku-and-hankaku-alphabet": "^1.0.1",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-preset-jtf-style": "^3.0.3",
    "textlint-rule-prh": "^6.1.0"
  }
}
