{
  "extends": [
    "../base/.textlintrc.base.json"
  ],
  "plugins": {},
  "rules": {
    "preset-ja-technical-writing": false,
    "preset-jtf-style": {
      "1.1.3.箇条書き": {
        "severity": "warning"
      },
      "3.1.1.全角文字と半角文字の間": false,
      "3.3.かっこ類と隣接する文字の間のスペースの有無": {
        "severity": "warning"
      },
      "4.2.7.コロン(：)": false,
      "4.2.8.セミコロン(；)": false,
      "4.3.1.丸かっこ（）": false,
      "4.3.7.山かっこ<>": {
        "severity": "warning"
      }
    },
    "preset-swift-docs-ja": true,
    "swift-docs-ja/prh": {
      "severity": "warning"
    }
  }
}
