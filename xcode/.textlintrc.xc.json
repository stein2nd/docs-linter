{
  "extends": "../base/.textlintrc.base.json",
  "rules": {
    "prh": {
      "rulePaths": ["./dictionary/swift-terms.yml"]
    },
    "terminology": {
      "defaultTerms": false,
      "terms": [
        "SwiftUI",
        "UIKit",
        "AppKit",
        "Xcode",
        "Storyboard",
        "Auto Layout",
        "Interface Builder",
        "View",
        "Modifier",
        "SceneDelegate",
        "AppDelegate",
        "Target",
        "Scheme",
        "Simulator"
      ]
  },
  "no-hankaku-kana": true,
  "no-mix-dearu-desumasu": {
    "preferInHeader": "ですます",
    "preferInBody": "である"
  },
  "ja-space-arround-code": true,
  "ja-no-mixed-period": true,
  "sentence-length": {
    "max": 120
  },
  "xcode/space-around-english": true
},
"plugins": {
    "xcode": {
      "rules": {
        "space-around-english": "./rules/space-around-english.js"
      }
    }
  }
}
